<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="UFCW.BenefitPlanPage" Title="My Benefit Plans">
	<ContentPage.Content>
        <StackLayout VerticalOptions = "FillAndExpand" BackgroundColor="Gray" HorizontalOptions = "FillAndExpand" Orientation="Vertical">
        <ListView x:Name="BenifitsList" HasUnevenRows="true">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                        <StackLayout BackgroundColor="{DynamicResource MainMenuBackgroundColor}" Padding="10,0,10,0" Spacing="10" 
                        Orientation="Vertical">
                             <Label Text="{Binding Question}" Font="Bold" TextColor="Black" Margin="0,5,0,0" />
                            <Label Text="{Binding Answer}" TextColor="{DynamicResource BaseTextColor}" Margin="0,5,0,5"/>
                        </StackLayout>
                    </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
         </StackLayout> 
	</ContentPage.Content>
</ContentPage>
